{
  "doc_id": "1975TOKYO15937",
  "doc_subject": "JAPAN-SVN RELATIONS: \"IMPOSSIBLE CONDITIONS\"",
  "doc_date": "1975-11-07",
  "claims": [
    {
      "claim_id": "c1",
      "claim_text": "Japan had provided economic assistance to the former GSVN, such as hospitals and power generating equipment.",
      "claim_type": "event",
      "entities": [
        "Japan",
        "former GSVN"
      ],
      "time_bounds": {
        "start": null,
        "end": "1975-11-07"
      },
      "importance": 3
    },
    {
      "claim_id": "c2",
      "claim_text": "Japan had provided no military equipment or materiel to the former GSVN.",
      "claim_type": "event",
      "entities": [
        "Japan",
        "former GSVN"
      ],
      "time_bounds": {
        "start": null,
        "end": "1975-11-07"
      },
      "importance": 3
    },
    {
      "claim_id": "c3",
      "claim_text": "Japan was willing to negotiate for the establishment of diplomatic relations if the RGSVN desired them.",
      "claim_type": "plan",
      "entities": [
        "Japan",
        "RGSVN"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c4",
      "claim_text": "Ito suggested that Japan and the PRG proceed immediately to establish diplomatic relations.",
      "claim_type": "plan",
      "entities": [
        "Ito",
        "Japan",
        "PRG"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 3
    },
    {
      "claim_id": "c5",
      "claim_text": "Tien announced that diplomatic relations were contingent on the Government of Japan (GOJ) agreeing to three conditions.",
      "claim_type": "attribution",
      "entities": [
        "Tien",
        "Government of Japan (GOJ)"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c6",
      "claim_text": "One condition for diplomatic relations was the inclusion in a communique of a statement that both sides would respect principles of independence, sovereignty, and non-interference in internal affairs of the other.",
      "claim_type": "plan",
      "entities": [
        "Japan",
        "PRG"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c7",
      "claim_text": "Another condition was that the communique should pledge both Japan and the PRG not to permit the use of their territory by a third party for attack against fourth parties.",
      "claim_type": "plan",
      "entities": [
        "Japan",
        "PRG"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c8",
      "claim_text": "The third condition was that Japan must agree in the communique to provide economic assistance to SVN.",
      "claim_type": "plan",
      "entities": [
        "Japan",
        "SVN"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    },
    {
      "claim_id": "c9",
      "claim_text": "Ito rejected the second condition (B) as a violation of the principle of sovereignty.",
      "claim_type": "assessment",
      "entities": [
        "Ito",
        "Japan"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c10",
      "claim_text": "Ito ruled out the third condition (C) regarding economic assistance in the communique.",
      "claim_type": "event",
      "entities": [
        "Ito",
        "Japan"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    },
    {
      "claim_id": "c11",
      "claim_text": "Japan would consider economic assistance to SVN after diplomatic relations were established, on the same basis as assistance to other under-developed countries.",
      "claim_type": "plan",
      "entities": [
        "Japan",
        "SVN"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c12",
      "claim_text": "Ito called the demand for economic assistance in the communique \"reparations.\"",
      "claim_type": "attribution",
      "entities": [
        "Ito"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 3
    },
    {
      "claim_id": "c13",
      "claim_text": "Tien responded \"Yes\" to Ito's interpretation that the PRG wanted Japan to fulfill three conditions but did not want to establish diplomatic relations.",
      "claim_type": "event",
      "entities": [
        "Tien",
        "Ito",
        "PRG",
        "Japan"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    },
    {
      "claim_id": "c14",
      "claim_text": "The talks between Ito and Tien then ended with no implication that further talks were scheduled or necessarily expected.",
      "claim_type": "event",
      "entities": [
        "Ito",
        "Tien"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": "1975-11-07"
      },
      "importance": 4
    },
    {
      "claim_id": "c15",
      "claim_text": "The Government of Japan's (GOJ) policy toward relations with the RGSVN would remain as Ito outlined to Tien.",
      "claim_type": "plan",
      "entities": [
        "Government of Japan (GOJ)",
        "RGSVN",
        "Ito",
        "Tien"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c16",
      "claim_text": "The GOJ plans to reduce and probably eventually eliminate staff in Saigon.",
      "claim_type": "plan",
      "entities": [
        "GOJ",
        "Saigon"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    },
    {
      "claim_id": "c17",
      "claim_text": "Ito described the DRV and SVN as puppets controlled by a single man in Hanoi.",
      "claim_type": "attribution",
      "entities": [
        "Ito",
        "DRV",
        "SVN",
        "Hanoi"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    },
    {
      "claim_id": "c18",
      "claim_text": "Ito expressed the view that Hanoi will maintain the fiction of a separate government in SVN for external affairs purposes to try to pry reparations and aid commitments from countries which had supported the former GVN, especially Japan and the US.",
      "claim_type": "attribution",
      "entities": [
        "Ito",
        "Hanoi",
        "SVN",
        "former GVN",
        "Japan",
        "US"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    },
    {
      "claim_id": "c19",
      "claim_text": "The Government of Japan (GOJ) has decided not to repeat its experience with Hanoi of two years of haggling over \"principles\" and \"reparations\" to establish diplomatic relations.",
      "claim_type": "assessment",
      "entities": [
        "Government of Japan (GOJ)",
        "Hanoi"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 4
    },
    {
      "claim_id": "c20",
      "claim_text": "The GOJ will concentrate on cultivating relations with the real authority in Hanoi.",
      "claim_type": "plan",
      "entities": [
        "GOJ",
        "Hanoi"
      ],
      "time_bounds": {
        "start": "1975-11-07",
        "end": null
      },
      "importance": 5
    }
